<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/venue_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/venue_picture"
        android:layout_toEndOf="@+id/venue_picture"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/venue_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/venue_picture"
        android:layout_below="@+id/venue_name"
        android:layout_toEndOf="@+id/venue_picture"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/venue_events"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/venue_picture"
        android:layout_below="@+id/venue_location"
        android:layout_toEndOf="@+id/venue_picture"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/venue_events_e"
        android:text="Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/venue_events"
        android:layout_below="@+id/venue_location"
        android:layout_margin="2dp" />

</RelativeLayout>
