<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="Sync settings"
        android:key="sync_settings">

        <ListPreference
            android:dialogTitle="@string/pref_syncConnectionType"
            android:entries="@array/pref_syncConnectionTypes_entries"
            android:entryValues="@array/pref_syncConnectionTypes_values"
            android:key="@string/pref_sync_list"
            android:title="@string/pref_syncConnectionType"
            android:summary="%s"
            android:defaultValue="60000"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="App settings"
        android:key="app_settings">


        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_face"
            android:summary="Open facebook page of the event imidiately"
            android:title="Event page" />

        <ListPreference
            android:dialogTitle="Home screen"
            android:entries="@array/pref_home_entries"
            android:entryValues="@array/pref_home_values"
            android:key="pref_home_list"
            android:title="Home screen"
            android:summary="%s"
            android:defaultValue="map"/>

    </PreferenceCategory>


</PreferenceScreen>

